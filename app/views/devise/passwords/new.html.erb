<body id='back_ground'>
	<h2>Forgot your password?</h2>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class='row'>
	    <div class="field col-xs-3">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, :id => "forgotEmail", :class => "form-control", :placeholder => "Email address" %>
	    </div>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary btn-signin' %>
	  </div>
	<% end %>

	<div class='links'>
	<%= render "devise/shared/links" %>
	</div>
</body>
